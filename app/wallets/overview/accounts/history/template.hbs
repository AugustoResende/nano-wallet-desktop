<section>
  <div class="container">
    <div class="row">
      <div class="col">
        {{#unless hideHistory}}
          <a href="#" class="arrow" {{action 'toggleHistory'}}>
            {{fa-icon "chevron-down"}}
          </a>
        {{else}}
          <a href="#" class="arrow" {{action 'toggleHistory'}}>
            {{fa-icon "chevron-up"}}
          </a>
        {{/unless}}
      </div>
    </div>
  </div>
</section>
{{#liquid-if (not hideHistory) class="hide-history"}}
  <section>
    <div class="container-fluid">
      <div class="row history-item-list">
        {{account-history history=model.history}}
      </div>
    </div>
  </section>
{{/liquid-if}}
