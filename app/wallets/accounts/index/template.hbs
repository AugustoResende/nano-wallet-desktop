<div class="card-group">
  <div class="card">
    <h5 class="card-header text-center text-truncate" title="{{model.id}}">
      {{model.id}}
    </h5>

    <div class="card-body">
      <div class="d-flex justify-content-center">
        {{qr-code content=model.id}}
      </div>

      <dl class="row justify-content-md-center">
        <dt class="col-md-3">Account</dt>
        <dd class="col-md-9 text-truncate" title="{{model.id}}">{{model.id}}</dd>

        <dt class="col-md-3">Balance</dt>
        <dd class="col-md-9 text-truncate" title="{{format-amount model.balance}}">{{format-amount model.balance}}</dd>

        <dt class="col-md-3">Pending</dt>
        <dd class="col-md-9 text-truncate" title="{{format-amount model.pending}}">{{format-amount model.pending}}</dd>
      </dl>

      {{#link-to 'wallets.accounts.send' class="card-link"}}
        Send
      {{/link-to}}

      {{#link-to 'wallets.accounts.history' class="card-link"}}
        History
      {{/link-to}}
    </div>
  </div>
</div>
